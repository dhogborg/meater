#/bin/bash

# Download the image from the server
curl $URL -o /tmp/meater.jpg > /dev/null 2>&1

# transform it to extract the numbers from this particular image
convert /tmp/meater.jpg $PREPROCESS /tmp/crop.jpg 

# translate the image to numbers with gosser
gosser -i /tmp/crop.jpg -p 7 -o int --pedantic --div 1000 --manifest config/manifest.json > /tmp/result 2>&1

if [ $? -eq 0 ]; then
	# insert into influxdb
	result=`cat /tmp/result`
	curl -i -XPOST 'http://influxdb:8086/write?db=meater' --data-binary "meterreading,type=heating,unit=MWh value=$result" > /dev/null 2>&1
else
	curl -i -XPOST 'http://influxdb:8086/write?db=meater' --data-binary "readerror,type=heating,source=gosser value=1" > /dev/null 2>&1
fi

atnetgo --station 'Rositas gata' --module 'Indoor' | grep Temperature | awk '{print $2}' > /tmp/temperature 2>&1
if [ $? -eq 0 ]; then
	temperature=`cat /tmp/temperature`
	curl -i -XPOST 'http://influxdb:8086/write?db=environment' --data-binary "temperature,module=indoor value=$temperature" > /dev/null 2>&1
fi

result=`cat /tmp/result`
echo "$(date): $result"